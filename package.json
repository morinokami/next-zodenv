{
  "name": "next-zodenv-workspaces",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=next-zodenv",
    "build": "npm run build --workspace=next-zodenv",
    "test": "npm run test --workspace=next-zodenv",
    "test:watch": "npm run test:watch --workspace=next-zodenv",
    "example:dev": "npm run dev --workspace=example"
  },
  "devDependencies": {
    "lint-staged": "^13.0.3",
    "simple-git-hooks": "^2.8.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "package/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
